{
  "patterns": ["\\bjags\\b"],
  "dependencies": [
    {
      "packages": ["jags"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["jags"],
      "pre_install": [
        { "command": "dnf -y install wget gcc gcc-c++ gfortran lapack* blas* atlas*"},
        { "command": "wget -O jags.tar.gz https://sourceforge.net/projects/mcmc-jags/files/JAGS/4.x/Source/JAGS-4.3.2.tar.gz/download"},
        { "command": "tar -xf jags.tar.gz"},
        { "command": "cd JAGS-4.3.2 && ./configure --libdir=/usr/local/lib64"},
        { "command": "cd JAGS-4.3.2 && make"},
        { "command": "cd JAGS-4.3.2 && sudo make install"}
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "fedora"
        }
      ]
    }
  ]
}