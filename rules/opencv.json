{
  "patterns": ["\\bopencv\\b"],
  "dependencies": [
    {
      "packages": ["libopencv-dev"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu"
        },
        {
          "os": "linux",
          "distribution": "debian"
        }
      ]
    },
    {
      "packages": ["opencv-devel"],
      "constraints": [
        {
          "os": "linux",
          "distribution": "fedora"
        },
        {
          "os": "linux",
          "distribution": "sle"
        },
        {
          "os": "linux",
          "distribution": "opensuse"
        }
      ]
    },
    {
      "packages": ["opencv-devel"],
      "pre_install": [
        { "command": "yum install -y epel-release" }
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos",
          "versions": ["7"]
        },
        {
          "os": "linux",
          "distribution": "rockylinux"
        }
      ]
    }
  ]
}
