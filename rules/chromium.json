{
  "patterns": [
    "\\bchromium\\b"
  ],
  "dependencies": [
    {
      "packages": [
        "chromium-browser"
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "ubuntu",
          "versions": [ "14.04", "16.04", "18.04" ]
        }
      ]
    },
    {
      "pre_install": [
        {
          "command": "yum install -y epel-release"
        }
      ],
      "packages": [
        "chromium"
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "centos",
          "versions": ["7", "8"]
        }
      ]
    },
    {
      "pre_install": [
        {
          "command": "rpm -q epel-release || yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm"
        }
      ],
      "packages": [
        "chromium"
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "redhat",
          "versions": ["7"]
        }
      ]
    },
    {
      "pre_install": [
        {
          "command": "rpm -q epel-release || yum install -y https://dl.fedoraproject.org/pub/epel/epel-release-latest-8.noarch.rpm"
        }
      ],
      "packages": [
        "chromium"
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "redhat",
          "versions": ["8"]
        }
      ]
    },
    {
      "packages": [
        "chromium"
      ],
      "constraints": [
        {
          "os": "linux",
          "distribution": "debian"
        },
        {
          "os": "linux",
          "distribution": "sle"
        },
        {
          "os": "linux",
          "distribution": "opensuse"
        }
      ]
    }
  ]
}
