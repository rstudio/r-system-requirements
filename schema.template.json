{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pre_install": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "command"
                  ]
                },
                {
                  "required": [
                    "script"
                  ]
                }
              ]
            }
          },
          "post_install": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              },
              "oneOf": [
                {
                  "required": [
                    "command"
                  ]
                },
                {
                  "required": [
                    "script"
                  ]
                }
              ]
            }
          },
          "packages": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "runtime_packages": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "apt_satisfy": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "constraints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/definitions/debian"
                },
                {
                  "$ref": "#/definitions/ubuntu"
                },
                {
                  "$ref": "#/definitions/centos"
                },
                {
                  "$ref": "#/definitions/rockylinux"
                },
                {
                  "$ref": "#/definitions/redhat"
                },
                {
                  "$ref": "#/definitions/opensuse"
                },
                {
                  "$ref": "#/definitions/sle"
                },
                {
                  "$ref": "#/definitions/fedora"
                },
                {
                  "$ref": "#/definitions/alpine"
                },
                {
                  "$ref": "#/definitions/windows"
                }
              ]
            }
          }
        },
        "required": [
          "packages"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "patterns",
    "dependencies"
  ],
  "additionalProperties": false
}
