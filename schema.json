{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [ "patterns", "dependencies" ],
  "properties": {
    "patterns": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [ "packages" ],
        "properties": {
          "pre_install": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "required": [ "command" ]
                },
                {
                  "required": [ "script" ]
                }
              ],
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              }
            }
          },
          "post_install": {
            "type": "array",
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "required": [ "command" ]
                },
                {
                  "required": [ "script" ]
                }
              ],
              "properties": {
                "command": {
                  "type": "string"
                },
                "script": {
                  "type": "string"
                }
              }
            }
          },
          "packages": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "apt_satisfy": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "constraints": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "oneOf": [
                {
                  "$ref": "#/definitions/debian"
                },
                {
                  "$ref": "#/definitions/ubuntu"
                },
                {
                  "$ref": "#/definitions/centos"
                },
                {
                  "$ref": "#/definitions/rockylinux"
                },
                {
                  "$ref": "#/definitions/redhat"
                },
                {
                  "$ref": "#/definitions/opensuse"
                },
                {
                  "$ref": "#/definitions/sle"
                },
                {
                  "$ref": "#/definitions/fedora"
                },
                {
                  "$ref": "#/definitions/alpine"
                },
                {
                  "$ref": "#/definitions/windows"
                }
              ]
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "definitions": {
    "versions": {
      "alpine": {
        "enum": [
          "3.15",
          "3.16",
          "3.17",
          "3.18",
          "3.19",
          "3.20",
          "3.21",
          "edge"
        ]
      },
      "centos": {
        "enum": [ "6", "7", "8" ]
      },
      "debian": {
        "enum": [ "10", "11", "12", "unstable" ]
      },
      "fedora": {
        "enum": [ "36", "37", "38", "39", "40", "41" ]
      },
      "opensuse": {
        "enum": [ "42.3", "15.0", "15.2", "15.3", "15.4", "15.5", "15.6" ]
      },
      "redhat": {
        "enum": [ "6", "7", "8", "9", "10" ]
      },
      "rockylinux": {
        "enum": [ "8", "9", "10" ]
      },
      "sle": {
        "enum": [ "12.3", "15.0", "15.2", "15.3", "15.4", "15.5", "15.6" ]
      },
      "ubuntu": {
        "enum": [ "14.04", "16.04", "18.04", "20.04", "22.04", "24.04" ]
      },
      "windows": {
        "enum": []
      }
    },
    "debian": {
      "type": "object",
      "required": [ "os" ],
      "properties": {
        "os": {
          "const": "linux"
        },
        "distribution": {
          "const": "debian"
        },
        "versions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/versions/debian"
          }
        }
      },
      "additionalProperties": false
    },
